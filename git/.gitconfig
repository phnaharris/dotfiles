[init]
	defaultBranch = main
[ui "color"]
	ui = always
[color]
	ui = true
[user]
	name = phnaharris
	email = phnanh.harris@gmail.com
    signingkey = 96E09780F3C57485
[commit]
    gpgsign = true
[diff]
    tool = nvimdiff
[merge]
    tool = nvimdiff
[alias]
    a = add
    br = branch
    c = commit -m
    ca = commit --amend --no-edit
    co = checkout
    commit = cz
    d = diff
    hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate --all
    llog = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
    open = "!hub browse"
    p = push
    pf = push -f
    pl = pull
    plr = pull --rebase
    st = status
    rs = restore
    rss = restore --staged
    rmv = remote -v
    rma = remote add origin
    rms = remote set-url origin
    wta = worktree add
    wtl = worktree list
    wtr = worktree remove
    wtp = worktree prune
[remote]
	pushDefault = origin
[rerere]
	enable = true
