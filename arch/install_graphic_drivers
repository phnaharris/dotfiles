#!/bin/su root

install_graphics_drivers() {
	echo "Do you have an nvidia card? (y/n)"
	read -r nvidia
	if [[ "$nvidia" == "y" ]]; then
		pacman -S nvidia nvidia-utils nvidia-settings
	fi

	echo "Do you have an amd card? (y/n)"
	read -r amd
	if [[ "$amd" == "y" ]]; then
		pacman -S xf86-video-amdgpu
	fi
}

install_graphics_drivers
